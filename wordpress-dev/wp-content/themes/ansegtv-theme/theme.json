{
    "version": 2,
    "settings": {
        "color": {
            "palette": [
                {
                    "slug": "primary",
                    "color": "#0073aa",
                    "name": "Primária"
                },
                {
                    "slug": "secondary",
                    "color": "#005177",
                    "name": "Secundária"
                },
                {
                    "slug": "accent",
                    "color": "#00a0d2",
                    "name": "Destaque"
                },
                {
                    "slug": "background",
                    "color": "#ffffff",
                    "name": "Fundo"
                },
                {
                    "slug": "text",
                    "color": "#333333",
                    "name": "Texto"
                }
            ],
            "gradients": [
                {
                    "slug": "primary-to-secondary",
                    "gradient": "linear-gradient(135deg, #0073aa 0%, #005177 100%)",
                    "name": "Primária para Secundária"
                }
            ]
        },
        "typography": {
            "fontSizes": [
                {
                    "slug": "small",
                    "size": "14px",
                    "name": "Pequeno"
                },
                {
                    "slug": "normal",
                    "size": "16px",
                    "name": "Normal"
                },
                {
                    "slug": "medium",
                    "size": "20px",
                    "name": "Médio"
                },
                {
                    "slug": "large",
                    "size": "24px",
                    "name": "Grande"
                },
                {
                    "slug": "x-large",
                    "size": "32px",
                    "name": "Extra Grande"
                }
            ],
            "fontFamilies": [
                {
                    "slug": "primary",
                    "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif",
                    "name": "Primária"
                },
                {
                    "slug": "secondary",
                    "fontFamily": "Georgia, 'Times New Roman', Times, serif",
                    "name": "Secundária"
                }
            ]
        },
        "spacing": {
            "units": [
                "px",
                "em",
                "rem",
                "vh",
                "vw",
                "%"
            ],
            "customSpacingSize": true
        },
        "layout": {
            "contentSize": "840px",
            "wideSize": "1100px"
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--background)",
            "text": "var(--wp--preset--color--text)"
        },
        "typography": {
            "fontSize": "var(--wp--preset--font-size--normal)",
            "fontFamily": "var(--wp--preset--font-family--primary)",
            "lineHeight": "1.6"
        },
        "elements": {
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--primary)"
                }
            },
            "h1": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--x-large)",
                    "fontFamily": "var(--wp--preset--font-family--secondary)",
                    "lineHeight": "1.2"
                }
            },
            "h2": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--large)",
                    "fontFamily": "var(--wp--preset--font-family--secondary)",
                    "lineHeight": "1.3"
                }
            },
            "h3": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--medium)",
                    "fontFamily": "var(--wp--preset--font-family--secondary)",
                    "lineHeight": "1.4"
                }
            }
        },
        "blocks": {
            "core/button": {
                "color": {
                    "background": "var(--wp--preset--color--primary)",
                    "text": "#ffffff"
                },
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--normal)"
                }
            },
            "core/post-title": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--x-large)",
                    "fontFamily": "var(--wp--preset--font-family--secondary)",
                    "lineHeight": "1.2"
                }
            },
            "core/site-title": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--large)",
                    "fontFamily": "var(--wp--preset--font-family--secondary)",
                    "lineHeight": "1.2"
                }
            }
        }
    }
} 